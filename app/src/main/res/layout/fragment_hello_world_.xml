<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hello_world_heading"
            android:text="Hello World"
            android:textSize="33sp"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:layout_below="@+id/hello_world_heading"
            android:layout_margin="15dp"
            android:id="@+id/hw_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hw_text"
            android:src="@drawable/hello_world_img"
            android:layout_marginLeft="20dp"
            android:id="@+id/hw_img_1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hw_img_1"
            android:text="output:"
            android:textSize="25sp"
            android:id="@+id/nw_op_text"
            android:textColor="@color/purple"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nw_op_text"
            android:src="@drawable/hw_op_img"
            android:id="@+id/img_op"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_below="@id/img_op"
            android:layout_marginLeft="15dp"
            android:background="@color/light_green"
            android:textColor="@color/white"
            android:id="@+id/btn_hw_prev"
            android:text="previous"
            android:textStyle="bold"/>



        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:background="@color/light_green"
            android:text="Next"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/img_op"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_hw_next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    </ScrollView>
</LinearLayout>